<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<div class="container">
  <ul>
    <% @letters.each do |letter|  %>
    <li><%= letter %></li>
    <% end %>
  </ul>


  <div class="form">
    <form action="score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word" placeholder="What is your word?">
      <input type= "text" name="letters" value='<%= @letters %>' hidden>
      <input id="button" type="submit" value ="Play">
    </form>


  </div>

</div>
